# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alzheimer_prevention
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# API Keys (if needed for external services)
OPENAI_API_KEY=your_openai_api_key_here

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Voice Integration Configuration
# VOICE_API_TOKEN: Optional bearer token for authenticating voice webhook requests
# If not set, webhook endpoint will be open (not recommended for production)
VOICE_API_TOKEN=your_voice_api_token_here

# ALZ_BASE_URL: Base URL for the backend API (used in voice adapter configuration)
# Example: http://localhost:3001 for local development
# Example: https://api.yourdomain.com for production
ALZ_BASE_URL=http://localhost:3001